# Yellowstone Environment Configuration Template
# Copy to .env and fill with actual values

# ==========================================
# Azure Configuration
# ==========================================
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_RESOURCE_GROUP=Yellowstone
AZURE_WORKSPACE_NAME=yellowstone-dev
SENTINEL_WORKSPACE_ID=your-workspace-id

# ==========================================
# Database Configuration
# ==========================================
# PostgreSQL
POSTGRES_USER=yellowstone
POSTGRES_PASSWORD=secure-postgres-password-here
POSTGRES_DB=yellowstone
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=yellowstone
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=secure-redis-password-here
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_POOL_SIZE=10

# ==========================================
# API Configuration
# ==========================================
ENVIRONMENT=development
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
LOG_LEVEL=DEBUG
API_TIMEOUT_SECONDS=30
MAX_QUERY_SIZE=1048576
MAX_RESULT_SIZE=52428800
REQUEST_BATCH_SIZE=100

# ==========================================
# Cache Configuration
# ==========================================
ENABLE_QUERY_CACHING=true
CACHE_TTL_SECONDS=3600
ENABLE_QUERY_OPTIMIZATION=true
MAX_COMPILATION_TIME_MS=5000

# ==========================================
# Security Configuration
# ==========================================
ENABLE_AUDIT_LOGGING=true
REQUIRE_AUTHENTICATION=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
JWT_SECRET_KEY=your-secure-jwt-secret-key-here
API_KEY_HEADER=X-API-Key

# ==========================================
# API Keys and Credentials
# ==========================================
CLAUDE_API_KEY=your-claude-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ==========================================
# Monitoring Configuration
# ==========================================
ENABLE_METRICS=true
ENABLE_TRACING=true
METRICS_PORT=9090
TRACE_SAMPLE_RATE=0.1

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==========================================
# Grafana Configuration
# ==========================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure-grafana-password-here
GRAFANA_ADMIN_EMAIL=admin@example.com

# ==========================================
# Email/Notification Configuration
# ==========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@example.com
ALERT_EMAIL_RECIPIENTS=admin@example.com,alerts@example.com

# ==========================================
# Feature Flags
# ==========================================
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_DEBUG_ENDPOINTS=false

# ==========================================
# Performance Tuning
# ==========================================
WORKER_THREADS=4
QUERY_BATCH_SIZE=100
CACHE_WARM_UP=true
ENABLE_COMPRESSION=true

# ==========================================
# Azure Bicep Parameters
# ==========================================
BICEP_ENVIRONMENT=prod
BICEP_LOCATION=eastus
BICEP_POSTGRES_SKU=B_Gen5_1
BICEP_POSTGRES_VERSION=15
BICEP_REDIS_SKU=Premium
BICEP_REDIS_CAPACITY=1
